<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:state_selected="false">
        <shape>
            <gradient android:angle="270" android:endColor="#bdbaba" android:startColor="#bdbaba" android:type="linear" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <gradient android:angle="270" android:endColor="#bdbaba" android:startColor="#bdbaba" android:type="linear" />
        </shape>
    </item>
    <item android:state_selected="false">
        <shape>
            <gradient android:angle="270" android:endColor="#e1e1e1" android:startColor="#e1e1e1" android:type="linear" />
        </shape>
    </item>
</selector>
